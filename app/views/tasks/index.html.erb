<h1>Your tasks!</h1>

<ul class="list-group">
	<% @tasks.each do |task| %>
    <li class="list-group-item border-0">
			<% if task.completed %>
				<i class="far fa-check-square"></i>
			<% else %>
				<i class="far fa-square"></i>
			<% end %>
			<%= link_to task.title, task_path(task.id) %>
			<%= link_to task_path(task), method: :delete, data: {confirm: "Are you sure?"} do %> <i class="fas fa-trash"></i> <% end %>
		</li>
	<% end %>
</ul>

<hr>

<%= link_to new_task_path do %>
	<div class="btn btn-primary">Add a new task</div>
<% end %>



